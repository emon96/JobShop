<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_size"
        android:id="@+id/relativel"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_username" />
            <EditText
                android:layout_width="match_parent"
                android:hint="    Name"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:backgroundTint="#e1dddd"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/registerUsernameId"
                android:background="@drawable/edittext_circle"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_action_email" />
        <EditText
            android:layout_width="match_parent"
            android:hint="    Email"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:backgroundTint="#e1dddd"
            android:paddingLeft="15dp"
            android:layout_marginLeft="10dp"
            android:inputType="textEmailAddress"
            android:id="@+id/registeremailId"
            android:background="@drawable/edittext_circle"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_action_passowrd" />
        <EditText
            android:layout_width="match_parent"
            android:hint="    Password"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:backgroundTint="#e1dddd"
            android:paddingLeft="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/registepasswordId"
            android:background="@drawable/edittext_circle"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="38dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:hint="    Confirm Password"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:backgroundTint="#e1dddd"
            android:layout_marginLeft="10dp"
            android:id="@+id/registeconfirmpasswordId"
            android:background="@drawable/edittext_circle"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_phone3" />
        <EditText
            android:layout_width="match_parent"
            android:hint="    Phone"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:backgroundTint="#e1dddd"
            android:paddingLeft="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/registerPhoneId"
            android:background="@drawable/edittext_circle"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>