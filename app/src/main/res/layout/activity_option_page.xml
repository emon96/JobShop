<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OptionPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_from_option"
            android:background="@drawable/action_bar_back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/profile_ic"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:gravity="left"
            android:textSize="18dp"
            android:id="@+id/profile_show"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="220dp"
            android:paddingTop="4dp"
            android:backgroundTint="#686d6e"
            android:background="@drawable/edittext_circle"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/new_post_ic"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add post"
            android:gravity="left"
            android:textSize="18dp"
            android:id="@+id/add_post_option_Id"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="220dp"
            android:paddingTop="4dp"
            android:backgroundTint="#686d6e"
            android:background="@drawable/edittext_circle"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/logout_ic"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LogOut"
            android:gravity="left"
            android:textSize="18dp"
            android:id="@+id/logout"
            android:paddingLeft="10dp"
            android:layout_marginTop="6dp"
            android:paddingRight="220dp"
            android:paddingTop="4dp"
            android:backgroundTint="#686d6e"
            android:background="@drawable/edittext_circle"/>

    </LinearLayout>

</LinearLayout>