<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_from_profile"
            android:background="@drawable/action_bar_back"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/profile_pic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_circle"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:backgroundTint="#2f91b7"
            android:gravity="center"
            android:id="@+id/changePicId"
            android:text="Change Profile Picture"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_username" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Username:"
            android:paddingTop="1dp"
            android:textStyle="bold|italic"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="ldjsl"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_gender" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Gender:"
            android:paddingTop="1dp"
            android:textStyle="bold|italic"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/profile_gender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="ldjsl"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_phone3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Phone:"
            android:paddingTop="1dp"
            android:textStyle="bold|italic"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="ldjsl"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_friend" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Friends:"
            android:paddingTop="1dp"
            android:textStyle="bold|italic"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/profile_noOfFriend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="ldjsl"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_action_email" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Email:"
            android:paddingTop="1dp"
            android:textStyle="bold|italic"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="ldjsl"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:text="About You"
            android:paddingTop="1dp"
            android:textStyle="bold|italic"
            android:layout_height="match_parent" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:background="#f9f4f4"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/aboutuser"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:hint="ldjsl"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:textColor="#000000"
         />
    </LinearLayout>


</LinearLayout>